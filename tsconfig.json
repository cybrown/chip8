{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noLib": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "typings"
    ]
}
